<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - My ASP.NET Application</title>
    <link href="~/css/site.css" rel="stylesheet" type="text/css" />
</head>
<body>
    <div class="header">
        <div class="title">
            <h1>Welcome to My ASP.NET Application</h1>
        </div>
        <div class="loginDisplay">
            @if (User.Identity?.IsAuthenticated == true)
            {
                <span>Welcome <span class="bold">@(User.Identity.Name ?? "User")</span>!</span>
                [ <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignOut">Log Out</a> ]
            }
            else
            {
                [ <a asp-area="MicrosoftIdentity" asp-controller="Account" asp-action="SignIn">Log In</a> ]
            }
        </div>
        <div class="clear"></div>
        <div class="navigationMenu">
            <div class="menu">
                <ul>
                    <li><a asp-page="/Index">Home</a></li>
                    <li><a asp-page="/About">About</a></li>
                    <li><a asp-page="/Secure">Secure Page</a></li>
                </ul>
            </div>
        </div>
    </div>
    <div class="main">
        <div class="content">
            @RenderBody()
        </div>
    </div>
    <div class="footer">
        <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
    </div>
</body>
</html>